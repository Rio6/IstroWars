{
  "name": "istrowars",
  "version": "0.0.1",
  "description": "Istrolid Clan Wars",
  "scripts": {
    "build": "tsc",
    "web": "NODE_ENV=production NODE_PATH=dist node dist/web/main.js",
    "logger": "NODE_ENV=production NODE_PATH=dist node dist/logger/main.js",
    "watch": "NODE_ENV=development NODE_PATH=dist concurrently -n 'build,web,logger' 'tsc -w --preserveWatchOutput' 'nodemon dist/web/main.js' 'nodemon dist/logger/main.js'",
    "db": "knex --knexfile db/knexfile.ts",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rio/IstroWars.git"
  },
  "author": "Rio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Rio/IstroWars"
  },
  "homepage": "https://github.com/Rio/IstroWars#readme",
  "dependencies": {
    "@koa/router": "^10.1.1",
    "knex": "^0.95.11",
    "koa": "^2.13.1",
    "koa-body": "^4.2.0",
    "koa-log": "^2.1.0",
    "sha1": "^1.1.1",
    "ws": "^8.2.2"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.8",
    "@types/koa-log": "^2.1.1",
    "@types/lodash": "^4.14.173",
    "@types/sha1": "^1.1.3",
    "@types/ws": "^7.4.7",
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12",
    "sqlite3": "^4.2.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
